
<center><div>
  <div>
    <h1>
      Final stadium
    </h1>
  </div>
</div>

<br/>

  <div>
  <div class="container">
  <div class="row">
  <div class="col-md-12">
<table class="table text-center table-bordered">
    <thead>
      <tr scope="col" style="background-color:#C0C0C0">
        <th scope="col"></th>
        <th scope="col">Stadium Name</th>
        <th scope="col">City</th>
        <th scope="col">Capacity</th>
        <th scope="col">Season</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
    <tbody>
      <% @list_of_final_stadia.order(:season_id).reverse_order.each do |a_final_stadium| %>
      <tr>
        <td><%= a_final_stadium.season_id %></td>
        <td><%= a_final_stadium.stadium_name %></td>
        <td><%= a_final_stadium.city %></td>
        <td><%= a_final_stadium.number_of_seats %></td>
        <td><%= a_final_stadium.seasons.first.season_year %></td>
        <td>
            <a href="/final_stadia/<%= a_final_stadium.id %>">
            Stadium details
          </a>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table> 
  </div>
  <br/>
  <hr>
