<div>
  <div>
    <h1>
      List of all final stadium
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Stadium name
        </th>

        <th>
          City
        </th>

        <th>
          Stadium image
        </th>

        <th>
          Number of seats
        </th>

        <th>
          Season
        </th>

         <th>
          Details
        </th>

      </tr>

      <% @list_of_final_stadia.each do |a_final_stadium| %>
      <tr>

        <td>
          <%= a_final_stadium.stadium_name %>
        </td>

        <td>
          <%= a_final_stadium.city %>
        </td>

        <td>
          <img src="<%= a_final_stadium.stadium_image %>"height="200"width="350">
        </td>

        <td>
          <%= a_final_stadium.number_of_seats %>
        </td>

        <td>
          <%= a_final_stadium.season_id %>
        </td>

        <td>
          <a href="/final_stadia/<%= a_final_stadium.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
