<div>
  <div>
    <h1>
      List of all clubs
    </h1>
  </div>
</div>

<div>
  <div>
<table class="table align-middle table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Club Name</th>
      <th scope="col">Country</th>
      <th scope="col">Logo</th>
      <th scope="col">Founding Year</th>
      <th scope="col">Stadium</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
  <% @list_of_clubs.each do |a_club| %>
    <tr>
      <td><%= a_club.club_name %></td>
      <td><%= a_club.country %></td>
      <td><<%= a_club.logo %></td>
      <td><%= a_club.founding_year %></td>
      <td><%= a_club.stadium_id %></td>
      <td>
          <a href="/clubs/<%= a_club.id %>">
            Show details
          </a></td>
      </td>
    </tr>
  </tbody>
  <% end %>
</table> 
</div>
