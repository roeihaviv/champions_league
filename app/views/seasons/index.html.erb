<div>
  <div>
    <h1>
      List of all seasons
    </h1>
  </div>
</div>

Select Season
  <select name="query_season_year">
    <%= Season.all.order(:season_year => :desc).each do |a_season| %>
      <option value="<%= a_season.id %>">
        <%= a_season.season_year %>
      </option>
    <% end %>
  </select>
  
<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Season Year
        </th>

        <th>
          Winner
        </th>

        <th>
          Final Stadium
        </th>

        <th>
          Top Scorer
        </th>

        <th>
          Details
        </th>

      </tr>

      <% @list_of_seasons.each do |a_season| %>
      <tr>

        <td>
          <%= a_season.season_year %>
        </td>

        <td>
          <%= a_season.winner_id %>
        </td>

        <td>
          <%= a_season.stadium_id %>
        </td>

        <td>
          <%= a_season.top_scorer_id %>
        </td>

        <td>
          <a href="/seasons/<%= a_season.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
